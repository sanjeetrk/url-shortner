<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        /* Global Styles */
*{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

body {
    background-color: #f3f4f6;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 1.5rem;
    font-family: 'Poppins', sans-serif;

}

/* Main Container */
.container {
    background-color: #ffffff;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    width: 800px;
    padding: 10px;
    transition: transform 0.3s ease-in-out;
}


/* Title */
h1 {
    font-size: 26px;
    font-weight: bold;
    text-align: center;
    color: #2563eb;
    margin-bottom: 20px;
}

/* Buttons */
button {
    background-color: #ef4444;
    color: white;
    font-weight: bold;
    padding: 10px 16px;
    border: none;
    border-radius: 8px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease-in-out;
    cursor: pointer;
    width: 100%;
    display: block;
    text-align: center;
}

.logout-button{
    background-color: #ef4444;
    color: white;
    font-weight: bold;
    padding: 10px 16px;
    margin-bottom: 1rem;
    border: none;
    border-radius: 8px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease-in-out;
    cursor: pointer;
    width: 5rem;
    display: block;
    /* text-align: center; */
    float: right;


}
button:hover {
    background-color: #dc2626;
    transform: scale(1.05);
}

/* Form Elements */
input[type="text"] {
    width: 100%;
    padding: 12px;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    outline: none;
    margin-bottom: 1rem;
    transition: border 0.2s ease-in-out;
    font-size: 16px;
}
input[type="text"]:focus {
    border: 2px solid #3b82f6;
    box-shadow: 0 0 5px rgba(37, 99, 235, 0.5);
}

/* Table Styles */
table {
    width: 100%;
    background-color: white;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    border-collapse: collapse;
    border-radius: 8px;
    overflow: hidden;
}

table th, table td {
    padding: 12px;
    border-bottom: 1px solid #e5e7eb;
    text-align: left;
    word-break: break-word;
}

table th {
    background-color: #f3f4f6;
    font-weight: 600;
}

table tr:hover {
    background-color: #f9fafb;
}

/* Responsive Design */
@media (max-width: 768px) {
    body{
        display: block;
        padding: 1rem;
        margin-top: 2rem;
    }

    .container {
        width: 100%;
        padding: 1rem;
    }
    h1 {
        font-size: 22px;
    }
    button {
        font-size: 14px;
    }
    table th, table td {
        padding: 8px;
        font-size: 14px;
    }
}

    </style>
</head>
<body>

    <div class="container">
        <h1 class="title">URL Shortener</h1>

        <!-- Logout Button -->
        <form action="/user/logout" method="POST" class="logout-form">
            <button className="logout-button" type="submit" class="logout-button">Logout</button>
        </form>

        <!-- Display generated URL -->
        <% if (locals.id) { %>
            <div class="generated-url">
                <p>URL generated:
                    <a href="http://<%= locals.host %>/url/<%= id %>" target="_blank" class="short-url">
                        http://<%= locals.host %>/url/<%= id %>
                    </a>
                </p>
            </div>
        <% } %>

        <!-- Form to generate new URL -->
        <form action="/url" method="post" class="url-form">
            <label for="url">Enter your original URL</label>
            <input type="text" name="url" required id="url" placeholder="https://example.com">
            <button type="submit">Generate Short URL</button>
        </form>

        <!-- Display list of all generated URLs -->
        <% if (locals.urls && locals.urls.length > 0) { %>
            <h2 class="sub-title">Your Shortened URLs</h2>
            <div class="table-wrapper">
                <table class="url-table">
                    <thead>
                        <tr>
                            <th>S. No</th>
                            <th>Original URL</th>
                            <th>Short URL</th>
                            <th>Clicks</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% urls.forEach((url, index)=> { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td>
                                    <a href="<%= url.redirectUrl %>" target="_blank" class="original-url">
                                        <%= url.redirectUrl %>
                                    </a>
                                </td>
                                <td>
                                    <a href="http://<%= locals.host %>/url/<%= url.shortid %>" target="_blank" class="short-url">
                                        http://<%= locals.host %>/url/<%= url.shortid %>
                                    </a>
                                </td>
                                <td class="click-count"><%= url.visitHistory.length %></td>
                                <td>
                                    <form action="/url/<%= url.shortid %>" method="POST">
                                        <input type="hidden" name="action" value="delete">
                                        <button type="submit" class="delete-button">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

</body>

</html>
